# Production Environment Variables
SPRING_PROFILES_ACTIVE=prod

# Database Configuration (MySQL/PostgreSQL - MUST be changed for production)
DB_URL=jdbc:mysql://prod-db-host:3306/gestion_alumnos_prod
DB_USERNAME=app_user
DB_PASSWORD=secure_password_here

# MongoDB Configuration (MUST be changed for production)
MONGODB_URI=mongodb://prod-mongo-host:27017/gestionalumnos_prod

# JWT Configuration (MUST be changed for production - use strong secret)
JWT_SECRET=CHANGE_THIS_STRONG_SECRET_KEY_FOR_PRODUCTION_AT_LEAST_256_BITS_LONG
JWT_EXPIRATION=3600000

# Server Configuration
SERVER_PORT=80

# Logging Configuration
LOG_LEVEL=WARN
LOG_LEVEL_APP=INFO

# JPA Configuration
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false

# SSL Configuration (MUST be configured for production)
SSL_ENABLED=true
SSL_KEYSTORE_PATH=classpath:keystore.p12
SSL_KEYSTORE_PASSWORD=changeit
SSL_KEY_ALIAS=tomcat

# CORS Configuration (MUST be restricted to your domain)
ALLOWED_ORIGINS=https://yourdomain.com

# Vaadin Configuration
VAADIN_PRODUCTION_MODE=true

# Production-specific
PRODUCTION_RATE_LIMITING_ENABLED=true
PRODUCTION_RATE_LIMITING_REQUESTS_PER_MINUTE=100
PRODUCTION_CACHE_ENABLED=true
PRODUCTION_CACHE_TTL=3600

# Log file location
LOG_FILE=/var/log/gestion_alumnos/application.log
